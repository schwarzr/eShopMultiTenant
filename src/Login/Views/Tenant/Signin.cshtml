@using Infrastructure.Tenant
@model IEnumerable<TenantSetup>
@{
    ViewData["Title"] = "Log in";
}
<div class="brand-header-block">
    <ul class="container">
        @*<li><a asp-area="" asp-controller="Account" asp-action="Register">REGISTER</a></li>*@
        <li class="active" style="margin-right: 65px;">LOGIN</li>
    </ul>
</div>
<div class="container account-login-container">
    <div class="row">
        <div class="col-md-12">
            <section>
                <form asp-controller="Tenant" asp-action="SignIn" asp-route-returnurl="@ViewData["ReturnUrl"]" method="post" class="form-horizontal">
                    <h4>Select the tenant</h4>

                    <div class="form-group">
                        <select name="TenantId"
                                asp-items="@(new SelectList(Model, "Id", "TenantKey"))"></select>
                    </div>
                    <div class="form-group">
                        <button type="submit" class="btn btn-default btn-brand btn-brand-big">&nbsp;OK&nbsp;</button>
                    </div>
                </form>
            </section>
        </div>
    </div>
</div>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}